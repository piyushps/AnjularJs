<style>
    #mydiv {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1000;
        background-color: grey;
        opacity: .8;
    }

    .ajax-loader {
        position: absolute;
        left: 50%;
        top: 50%;
        margin-left: -32px; /* -1 * image width / 2 */
        margin-top: -32px; /* -1 * image height / 2 */
        display: block;
    }
</style>

<div data-ng-app data-ng-controller="studentController" class="container">
    <strong class="error">{{ error }}</strong>
    <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add New</a></p>
    <form name="addStudent" data-ng-show="addMode" style="width:600px;margin:0px auto;">
        <label>FirstName:</label><input type="text" data-ng-model="newstudent.FirstName" required />
        <label>LastName:</label><input type="text" data-ng-model="newstudent.LastName" required />
        <label>City:</label><input type="text" data-ng-model="newstudent.City" required />
        <br />
        <br />
        <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addStudent.$valid" class="btn btn-primary" />
        <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
        <br /><br />
    </form>
    <table class="table table-bordered table-hover" style="width:800px">
        <tr>
            <th>#</th>
            <td>FirstName</td>
            <th>LastName</th>
            <th>City</th>
            
        </tr>

        <tr data-ng-repeat="student in students">
            <td><strong data-ng-hide="student.editMode">{{ student.Id }}</strong></td>
            <td>
                <p data-ng-hide="student.editMode">{{ student.FirstName }}</p>
                <input data-ng-show="student.editMode" type="text" data-ng-model="student.FirstName" />
            </td>
            <td>
                <p data-ng-hide="student.editMode">{{ student.LastName }}</p>
                <input data-ng-show="student.editMode" type="text" data-ng-model="student.LastName" />
            </td>
            <td>
                <p data-ng-hide="student.editMode">{{ student.City }}</p>
                <input data-ng-show="student.editMode" type="text" data-ng-model="student.City" />
            </td>
           
            <td>
                <p data-ng-hide="friend.editMode"><a data-ng-click="toggleEdit(student)" href="javascript:;">Edit</a> | <a data-ng-click="deletestudent(student)" href="javascript:;">Delete</a></p>
                <p data-ng-show="friend.editMode"><a data-ng-click="save(student)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(student)" href="javascript:;">Cancel</a></p>
            </td>
        </tr>
    </table>
    <hr />


</div>